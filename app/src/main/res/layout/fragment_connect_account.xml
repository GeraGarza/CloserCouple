<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/active_icon"
    android:orientation="vertical"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_background"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Ask your partner\nfor their username"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/connect_your_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_account_clicked"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:text="Your username: Gera_"
                    android:textAlignment="textStart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/account_row_font_size" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@drawable/circular_grey_edit_text"

                    >

                    <EditText
                        android:id="@+id/et_user_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/proximanovaregular"
                        android:hint="Partner's Username"
                        android:padding="10dp"
                        android:textColor="@color/goodgrey"
                        android:textSize="15sp" />
                </FrameLayout>

                <Button
                    android:id="@+id/connect_partner_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_active"
                    android:padding="12dp"
                    android:text="Connect Partner"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/account_row_font_size" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>