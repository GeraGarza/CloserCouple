<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/landing_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/playfairdisplayregular"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingBottom="12dp"
        android:text="Welcome to CloserCouple!"
        android:textColor="@color/white_text"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/intro_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfairdisplayregular"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="The  quickest way to turn dates into exciting adventures. Choose your availability, customize your interests, then let the romance begin."
        android:textColor="@color/white_text"
        android:textSize="18dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"

        >


    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:padding="40dp"

        android:scaleType="fitXY"
        android:src="@drawable/ic_hands" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageButton
            android:id="@+id/intro_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circular_grey_bordersolid"
            android:maxWidth="60dp"
            android:maxHeight="60dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_right_arrow"

            />

    </FrameLayout>


</LinearLayout>